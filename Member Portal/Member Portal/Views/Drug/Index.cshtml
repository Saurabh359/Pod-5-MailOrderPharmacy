@{
    ViewData["Title"] = "Drug Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="justify-content-center">
    <h2>Drug Search</h2>
</div>

<div class="row">
    <div class="col-6 offset-2">
        <form asp-action="Drug" method="get">
            <input type="text" placeholder="Drug Name" style="float:left" name="name" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </form>
    </div>
</div>


<div>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Subscription">Go Back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}