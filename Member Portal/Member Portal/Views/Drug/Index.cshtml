@{
    ViewData["Title"] = "Drug Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-4 text-center">
    <h2 class="display-4">Drug Search </h2>
    @if (!String.IsNullOrEmpty(ViewBag.Response))
    {
        <div class="alert alert-danger" role="alert">
            <strong>@ViewBag.Response</strong>
        </div>
    }
</div>
<div class="container m-5">
    <div class="row">
        <div class="col-md-8 offset-md-4">
            <form asp-action="DrugbyName" method="get">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Drug Name" pattern="[a-zA-Z ]+" size="25" required />
                    <input type="submit" value="Search by Name" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row m-3">
        <div class="col-md-8 offset-md-4">
            <form asp-action="DrugbyId" method="get">
                <div class="form-group">
                    <input type="text" name="id" placeholder="Drug Id" pattern="[1-9]+" min="1" max="200" size="25" required />
                    <input type="submit" value="Search by Id" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Subscription">Go Back</a>
</div>
