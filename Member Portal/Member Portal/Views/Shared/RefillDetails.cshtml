@model Member_Portal.Models.RefillOrderDetails;

<div class="row d-flex justify-content-center">
    <div class="col-6 card shadow bg-white">
        <table class="text-center p-4">
            <tr>
                <td class="px-4"><p><strong>Refill Order Id  </strong><p></td>
                <td class="px-4"><p>@Model.Id</p></td>
            </tr>
            <tr>
                <td class="px-4"><p><strong>Completion Date  </strong><p></td>
                <td class="px-4"><p>@Model.RefillDate</p></td>
            </tr>
            <tr>
                <td class="px-4"><p><strong>Drug Quantity </strong><p></td>
                <td class="px-4"><p>@Model.DrugQuantity </p></td>
            </tr>
            <tr>
                <td class="px-4"><p><strong>Delivery </strong><p></td>
                <td class="px-4">
                    <p>
                        @if (Model.RefillDelivered)
                        {
                            <span> Completed </span>
                        }
                        else
                        {
                            <span> Processing </span>
                        }
                    </p>
                </td>
            </tr>
            <tr>
                <td class="px-4"><p><strong>Payment </strong><p></td>
                <td class="px-4">
                    <p>
                        @if (Model.Payment)
                        {
                            <span> Completed </span>
                        }
                        else
                        {
                            <span> Pending </span>
                        }
                    </p>
                </td>
            </tr>
        </table>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Subscription">Go Back</a>
</div>